<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    android:background="@color/themeblue"
    tools:context=".MainActivity">

   <LinearLayout

           android:id="@+id/brgblancframeone"
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:gravity="center"
           android:layout_height="696dp"
           android:background="@drawable/imgbrgframeoneblanc">

           <ImageView

               android:id="@+id/imgplatframeone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/imgbrgframeoneplat"/>

           <ImageView

               android:id="@+id/imgfoodland"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:src="@drawable/foodland"/>

           <ImageView

               android:id="@+id/Getstart"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:src="@drawable/imgbtnframeone"/>


   </LinearLayout>


</LinearLayout>